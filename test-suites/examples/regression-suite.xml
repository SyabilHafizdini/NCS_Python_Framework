<?xml version="1.0" encoding="UTF-8"?>
<suite name="regression-test-suite" version="1.0">
    <description>Comprehensive regression test suite for full application testing</description>
    
    <parameters>
        <parameter name="env" value="DEV"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="timeout" value="60"/>
        <parameter name="retry_count" value="2"/>
    </parameters>
    
    <test name="regression-tests">
        <groups>
            <run>
                <include name="regression"/>
                <include name="smoke"/>
                <include name="integration"/>
                <exclude name="experimental"/>
            </run>
        </groups>
        
        <classes>
            <class name="tests"/>
        </classes>
    </test>
</suite>