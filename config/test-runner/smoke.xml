<?xml version="1.0" encoding="UTF-8"?>
<!-- Smoke Test Suite Configuration - Python QAF Framework -->
<!-- Critical functionality validation tests -->
<suite name="SPF NGEN Smoke Test Suite" verbose="1">
    
    <!-- Environment Configuration -->
    <parameter name="env.code" value="DEV"/>
    <parameter name="env.resources" value="resources;test_data/environment_config/DEV;execution_config/DEV"/>
    
    <!-- Execution Metadata -->
    <parameter name="exec.name" value="Smoke Test Execution"/>
    <parameter name="exec.index" value="1"/>
    
    <!-- Test Selection Filters - Smoke Tests Only -->
    <parameter name="include" value="{'groups':['smoke']}"/>
    <parameter name="exclude" value="{'groups':['regression','slow']}"/>
    
    <!-- Browser Configuration for Fast Execution -->
    <parameter name="driver.name" value="chromeDriver"/>
    <parameter name="chrome.options" value="--no-sandbox,--disable-dev-shm-usage,--start-maximized,--disable-extensions"/>
    
    <!-- Reduced Timeouts for Quick Feedback -->
    <parameter name="selenium.wait.timeout" value="20"/>
    <parameter name="selenium.implicit.timeout" value="5"/>
    
    <!-- Reporting Configuration -->
    <parameter name="test.results.dir" value="test-results/smoke"/>
    <parameter name="json.report.root.dir" value="test-results/smoke"/>
    <parameter name="allure.results.directory" value="allure-results/smoke"/>
    
    <!-- BDD Test Configuration -->
    <test name="Smoke Feature Tests">
        <classes>
            <class name="qaf.pytest.BDDTestFactory">
                <methods>
                    <include name=".*"/>
                </methods>
            </class>
        </classes>
        
        <listeners>
            <listener class-name="qaf.automation.core.TestListener"/>
            <listener class-name="qaf.automation.util.JSONReporter"/>
            <listener class-name="qaf.automation.util.AllureReporter"/>
        </listeners>
    </test>
    
    <!-- Feature File Configuration -->
    <parameter name="scenario.file.loc" value="tests"/>
    <parameter name="bdd.include.scenario.pattern" value=".*\.feature"/>
    
    <!-- Priority-based Test Selection -->
    <parameter name="test.priority.filter" value="CRITICAL,HIGH"/>
    
    <!-- Tag-based Test Selection for Smoke -->
    <groups>
        <define name="smoke">
            <include name="smoke"/>
            <include name="critical"/>
            <include name="login"/>
            <include name="authentication"/>
        </define>
        
        <run>
            <include name="smoke"/>
        </run>
    </groups>
    
    <!-- Parallel Execution Configuration -->
    <parameter name="thread-count" value="2"/>
    <parameter name="parallel" value="methods"/>
    
</suite>