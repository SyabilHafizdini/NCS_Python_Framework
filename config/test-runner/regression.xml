<?xml version="1.0" encoding="UTF-8"?>
<!-- Regression Test Suite Configuration - Python QAF Framework -->
<!-- Comprehensive test coverage for full regression testing -->
<suite name="SPF NGEN Regression Test Suite" verbose="1">
    
    <!-- Environment Configuration -->
    <parameter name="env.code" value="UAT"/>
    <parameter name="env.resources" value="resources;test_data/environment_config/UAT;execution_config/UAT"/>
    
    <!-- Execution Metadata -->
    <parameter name="exec.name" value="Full Regression Test Execution"/>
    <parameter name="exec.index" value="1"/>
    
    <!-- Test Selection Filters - All Tests -->
    <parameter name="include" value="{'groups':['regression','smoke','integration']}"/>
    <parameter name="exclude" value="{'groups':['manual','wip']}"/>
    
    <!-- Browser Configuration -->
    <parameter name="driver.name" value="chromeDriver"/>
    <parameter name="chrome.options" value="--no-sandbox,--disable-dev-shm-usage,--start-maximized"/>
    
    <!-- Extended Timeouts for Complex Tests -->
    <parameter name="selenium.wait.timeout" value="45"/>
    <parameter name="selenium.implicit.timeout" value="15"/>
    
    <!-- Comprehensive Reporting Configuration -->
    <parameter name="test.results.dir" value="test-results/regression"/>
    <parameter name="json.report.root.dir" value="test-results/regression"/>
    <parameter name="allure.results.directory" value="allure-results/regression"/>
    <parameter name="html.report.enabled" value="true"/>
    <parameter name="video.recording.enabled" value="true"/>
    
    <!-- BDD Test Configuration -->
    <test name="Regression Feature Tests">
        <classes>
            <class name="qaf.pytest.BDDTestFactory">
                <methods>
                    <include name=".*"/>
                </methods>
            </class>
        </classes>
        
        <listeners>
            <listener class-name="qaf.automation.core.TestListener"/>
            <listener class-name="qaf.automation.util.JSONReporter"/>
            <listener class-name="qaf.automation.util.AllureReporter"/>
            <listener class-name="qaf.automation.util.HTMLReporter"/>
        </listeners>
    </test>
    
    <!-- Feature File Configuration -->
    <parameter name="scenario.file.loc" value="tests"/>
    <parameter name="bdd.include.scenario.pattern" value=".*\.feature"/>
    
    <!-- Data-Driven Test Configuration -->
    <parameter name="data.provider.enabled" value="true"/>
    <parameter name="excel.data.provider.enabled" value="true"/>
    
    <!-- Comprehensive Tag-based Test Selection -->
    <groups>
        <define name="regression">
            <include name="regression"/>
            <include name="smoke"/>
            <include name="critical"/>
            <include name="high"/>
            <include name="medium"/>
        </define>
        
        <define name="integration">
            <include name="integration"/>
            <include name="api"/>
            <include name="database"/>
            <include name="workflow"/>
        </define>
        
        <define name="functional">
            <include name="login"/>
            <include name="authentication"/>
            <include name="profile"/>
            <include name="data_management"/>
            <include name="reports"/>
            <include name="admin"/>
        </define>
        
        <run>
            <include name="regression"/>
            <include name="integration"/>
            <include name="functional"/>
        </run>
    </groups>
    
    <!-- Parallel Execution Configuration -->
    <parameter name="thread-count" value="3"/>
    <parameter name="parallel" value="tests"/>
    <parameter name="data-provider-thread-count" value="2"/>
    
    <!-- Retry Configuration for Flaky Tests -->
    <parameter name="retry.count" value="2"/>
    <parameter name="retry.failed.only" value="true"/>
    
    <!-- Test Priority Configuration -->
    <parameter name="test.priority.filter" value="CRITICAL,HIGH,MEDIUM"/>
    
</suite>